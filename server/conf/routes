# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       staticFile:public/index.html
GET		/base									staticFile:public/index.html
GET		/cache									staticFile:public/index.html
GET		/replication							staticFile:public/index.html

GET		/mysql									Application.mysql

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET		/static/								staticDir:public/static

# Catch all
* 		/api/{controller}/{action}				{controller}.{action}
*       /{controller}/{action}                  {controller}.{action}
