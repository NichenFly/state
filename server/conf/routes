# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       staticFile:public/index.html
GET		/bases									staticFile:public/index.html
GET		/caches									staticFile:public/index.html
GET		/replications							staticFile:public/index.html

GET		/mysql									Application.mysql

GET 	/api/getMenus							MenuController.getMenus

GET		/api/mysql/getBases						MySQLController.getBases
GET		/api/mysql/getCaches					MySQLController.getCaches
GET		/api/mysql/getReplications				MySQLController.getReplications

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET		/static/								staticDir:public/static

# Catch all
* 		/api/{controller}/{action}				{controller}.{action}
*       /{controller}/{action}                  {controller}.{action}
